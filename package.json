{
  "name": "angular4-material-table",
  "description": "Angular 4 table based on @angular/cdk table structure, to allow row insertion, edition, validation and deletion.",
  "keywords": ["angular","angular4","table","inline validation","angular material table"],
  "author": "irossimoline",
  "version": "0.0.5",
  "license": "MIT",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/angular4-material-table.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/angular4-material-table.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^4.4.4",
    "@angular/core": "^4.4.4",
    "@angular/forms": "^4.4.4",
    "@angular/cdk": "2.0.0-beta.12",
    "core-js": "^2.4.1",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.1.2",
    "@angular/compiler": "^4.4.5",
    "@angular/compiler-cli": "^4.4.5",
    "@angular/language-service": "^4.0.0",
    "@types/jasmine": "2.5.45",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "rollup": "^0.50.0",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "^2.3.4",
    "uglify-js": "^3.1.4"
  }
}
